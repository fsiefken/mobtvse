<li id="post-<%= li.id %>">
	<h3>
		<%= link_to li.title, '/edit/' + li.id.to_s %>
		<span class="links">
			<%= link_to 'i', li, :class => 'entypo admin-view' %>
			<%= link_to "X", li, :confirm => 'Are you sure?', :method => :delete, :class => 'entypo admin-delete' %>
		</span>
	</h3>
</li>
<!-- END _li.html.erb -->
